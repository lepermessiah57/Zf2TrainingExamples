{% extends 'layout/layout.twig' %}

{% block title %} 100 Doors Kata {% endblock %}

{% block content %}
Select the state of the 100 doors kata you would like to see!

<form method="post" action="/door/state">
    <input type="text" name="doorStateIndex"/>
    <input type="submit" value="Click me" />
</form>

<h3>Status</h3>

    {% for door in doors %}
        <div>{{ loop.index }} : {{ door.printState() }}</div>
    {% endfor %}

{% endblock %}